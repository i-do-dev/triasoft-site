---
import Layout from '../layouts/Layout.astro';

const team = [
  {
    name: "Waqar Muneer",
    title: "Founder / CEO",
    image: "https://uxwing.com/wp-content/themes/uxwing/download/peoples-avatars/man-user-circle-black-icon.png",
  },
  {
    name: "Asim Sarwar",
    title: " Co-Founder / CTO",
    image: "https://uxwing.com/wp-content/themes/uxwing/download/peoples-avatars/man-user-circle-black-icon.png",
  },
  {
    name: "Abid Ali",
    title: "Backend Developer",
    image: "https://uxwing.com/wp-content/themes/uxwing/download/peoples-avatars/man-user-circle-black-icon.png",
  },
  {
    name: "Azam Khan",
    title: " Mobile & Frontend Developer",
    image: "https://uxwing.com/wp-content/themes/uxwing/download/peoples-avatars/man-user-circle-black-icon.png",
  },
  {
    name: "Ahsan Bhutta",
    title: "BackendÂ Developer",
    image: "https://uxwing.com/wp-content/themes/uxwing/download/peoples-avatars/man-user-circle-black-icon.png",
  },
];
---

<Layout title="Team | TRIASOFT">
  <section class="bg-gray-50 dark:bg-gray-900 py-20 transition-colors duration-500">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <!-- Left aligned heading -->
      <div class="mb-16 text-left">
        <h2 class="text-4xl font-extrabold text-gray-900 dark:text-gray-100 sm:text-5xl transition-colors duration-500">
          Meet Our Leadership
        </h2>
        <p class="mt-4 text-lg text-gray-600 dark:text-gray-300 max-w-2xl transition-colors duration-500">
          A passionate group of individuals driving innovation and delivering
          excellence.
        </p>
      </div>

      <!-- Grid layout -->
      <div class="grid gap-10 sm:grid-cols-2 lg:grid-cols-2">
        {team.map((member) => (
          <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-md hover:shadow-xl transition p-6 flex items-center gap-6">
            <img
              class="h-24 w-24 rounded-full  object-cover shadow-md"
              src={member.image}
              alt={member.name}
            />
            <div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 transition-colors duration-500">
                {member.name}
              </h3>
              <p class="text-indigo-600 dark:text-indigo-400 font-medium transition-colors duration-500">
                {member.title}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
