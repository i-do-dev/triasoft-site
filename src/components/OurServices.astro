---
import laravelLogo from "../assets/Laravel.svg";
import symfonyLogo from "../assets/symfony.svg";
import expressLogo from "../assets/express.png";
import fastapiLogo from "../assets/fastapi.png";
import djangoLogo from "../assets/django.svg";

import reactLogo from "../assets/react.png";
import vueLogo from "../assets/vuejs.png";
import angularLogo from "../assets/angular.jpg";
import nextLogo from "../assets/nextjs.svg";
import svelteLogo from "../assets/svelte.png";
import tailwindLogo from "../assets/tcss.png";
import flutter from "../assets/flutter.png";
import android from "../assets/android.png";
import apple from "../assets/Apple.png";
import swift from "../assets/swift.png";
import angularjs from "../assets/angularjs.png";
import ts from "../assets/typescript.png";
import js from "../assets/javascript.png";
import reactnew from "../assets/reactnew.png";

import tensorflowLogo from "../assets/tf.jpg";
import pytorchLogo from "../assets/pytroch.png";
import langchainLogo from "../assets/langchain.png";
import hugging from "../assets/hugging.png";
import lgraph from "../assets/lagraph.avif";
import vdb from "../assets/vdb1.png";
import pyt from "../assets/PyT.webp";
import nestlogo from "../assets/nestlogo.jpg";
---

<section class="our-services py-16 px-6 bg-white dark:bg-gray-900 transition-colors duration-300">
  <!-- Section Heading -->
  <div class="text-center mb-12">
    <h2 class="text-3xl sm:text-4xl font-bold text-[#00697c] dark:text-teal-400">
      Empowering Development Services
    </h2>
    <p class="text-gray-700 dark:text-gray-300 mt-3 text-lg max-w-2xl mx-auto">
      Gain access to the expert technical services that drive your growth and fuel success.
    </p>
  </div>

  <!-- First Row: Backend + Frontend -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-10 mx-auto mb-16">

    <!-- Backend Development -->
    <div class="service-card rounded-2xl shadow-lg p-6 flex flex-col items-start bg-gray-50 dark:bg-gray-800">
      <h3 class="text-3xl font-bold text-[#00697c] dark:text-teal-400 mb-2">Backend Development</h3>
      <p class="text-black dark:text-gray-200 text-base md:text-lg leading-relaxed mb-4">
        We build robust, secure, and scalable server-side logic that powers your applications...
      </p>

      <div class="mt-3 w-full">
        <h4 class="font-bold text-2xl text-[#00697c] dark:text-teal-400 mb-2">Programming Languages</h4>
        <p class="text-black dark:text-gray-200 text-base md:text-lg mb-4">PHP, NodeJS, Python</p>

        <h4 class="font-bold text-2xl text-[#00697c] dark:text-teal-400 mb-2">Frameworks</h4>
        <div class="flex flex-wrap gap-4">
          <img src={laravelLogo.src} alt="Laravel" class="w-10 h-10" />
          <img src={symfonyLogo.src} alt="Symfony" class="w-10 h-10" />
          <img src={expressLogo.src} alt="ExpressJS" class="w-10 h-10" />
          <img src={fastapiLogo.src} alt="FastAPI" class="w-10 h-10" />
          <img src={djangoLogo.src} alt="Django" class="w-10 h-10" />
        </div>
      </div>
    </div>

    <!-- Frontend Development -->
    <div class="service-card rounded-2xl shadow-lg p-6 flex flex-col items-start bg-gray-50 dark:bg-gray-800">
      <h3 class="text-3xl font-bold text-[#00697c] dark:text-teal-400 mb-2">Frontend Development</h3>
      <p class="text-black dark:text-gray-200 text-base md:text-lg leading-relaxed mb-4">
        We craft the user interface (UI) and user experience (UX) for fast, responsive, and visually appealing web apps...
      </p>

      <div class="mt-3 w-full">
        <h4 class="font-bold text-2xl text-[#00697c] dark:text-teal-400 mb-2">Programming Languages</h4>
        <p class="text-black dark:text-gray-200 text-base md:text-lg mb-4">JavaScript, TypeScript, HTML5, CSS3</p>

        <h4 class="font-bold text-2xl text-[#00697c] dark:text-teal-400 mb-2">Frameworks & Libraries</h4>
        <div class="flex flex-wrap gap-4">
          <img src={reactnew.src} alt="React" class="w-10 h-10" />
          <img src={vueLogo.src} alt="Vue.js" class="w-10 h-10" />
          <img src={angularjs.src} alt="Angular" class="w-10 h-10" />
          <img src={nextLogo.src} alt="Next.js" class="w-10 h-10" />
          <img src={svelteLogo.src} alt="Svelte" class="w-10 h-10" />
          <img src={tailwindLogo.src} alt="Tailwind CSS" class="w-10 h-10" />
        </div>
      </div>
    </div>
  </div>

  <!-- Second Row: Mobile + MVP -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-10 mb-16">

    <!-- Mobile App Development -->
    <div class="service-card rounded-2xl shadow-lg p-6 flex flex-col justify-between h-full bg-teal-50 dark:bg-teal-900/20">
      <div>
        <h3 class="text-3xl font-bold text-[#00697c] dark:text-teal-400 mb-2">Mobile App Development</h3>
        <p class="text-black dark:text-gray-200 text-base md:text-lg leading-relaxed mb-3">
          We develop native and cross-platform apps designed to increase user engagement...
        </p>
      </div>
      <div class="flex flex-wrap gap-3 mt-4">
        <img src={apple.src} alt="Apple" class="w-10 h-10" />
        <img src={android.src} alt="Android" class="w-10 h-10" />
        <img src={swift.src} alt="Swift" class="w-10 h-10" />
        <img src={flutter.src} alt="Flutter" class="w-10 h-10" />
      </div>
    </div>

    <!-- MVP Development -->
    <div class="service-card rounded-2xl shadow-lg p-6 flex flex-col justify-between h-full bg-teal-50 dark:bg-teal-900/20">
      <div>
        <h3 class="text-3xl font-bold text-[#00697c] dark:text-teal-400 mb-2">Minimum Viable Product (MVP)</h3>
        <p class="text-black dark:text-gray-200 text-base md:text-lg leading-relaxed mb-3">
          Validate your core concept quickly and affordably with essential features...
        </p>
      </div>
      <div class="flex flex-wrap gap-3 mt-4">
        <img src={ts.src} alt="TypeScript" class="w-10 h-10" />
        <img src={angularjs.src} alt="AngularJS" class="w-10 h-10" />
        <img src={js.src} alt="JavaScript" class="w-10 h-10" />
        <img src={reactnew.src} alt="React" class="w-10 h-10" />
        <img src={nextLogo.src} alt="Next.js" class="w-10 h-10" />
        <img src={nestlogo.src} alt="Nest.js" class="w-10 h-10" />
      </div>
    </div>
  </div>

  <!-- Third Row: AI / ML -->
  <div class="grid grid-cols-1">
    <div class="service-card rounded-2xl shadow-lg p-6 flex flex-col justify-between h-full bg-teal-50 dark:bg-teal-900/20">
      <div>
        <h3 class="text-3xl font-bold text-[#00697c] dark:text-teal-400 mb-2">AI / ML Development</h3>
        <p class="text-black dark:text-gray-200 text-base md:text-lg leading-relaxed mb-4">
          Integrate next-generation intelligence into your products, transforming data into predictive models...
        </p>

        <h4 class="font-bold text-2xl text-[#00697c] dark:text-teal-400 mb-2">Key Technologies</h4>
        <p class="text-black dark:text-gray-200 text-base md:text-lg mb-4">LLMs, GenAI, RAG, NLP, Computer Vision</p>

        <h4 class="font-bold text-2xl text-[#00697c] dark:text-teal-400 mb-2">Frameworks & Libraries</h4>
        <div class="flex flex-wrap gap-4 mt-2">
          <img src={tensorflowLogo.src} alt="TensorFlow" class="w-10 h-10" />
          <img src={pyt.src} alt="PyTorch" class="w-10 h-10" />
          <img src={vdb.src} alt="VectorDB" class="w-10 h-10" />
          <img src={hugging.src} alt="Hugging Face" class="w-10 h-10" />
          <img src={lgraph.src} alt="LangGraph" class="w-10 h-10" />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.our-services img {
  transition: transform 0.3s ease;
}
.our-services img:hover {
  transform: scale(1.08);
}
.service-card {
  transition: all 0.3s ease;
}
.service-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 10px 20px rgba(0, 105, 124, 0.15);
}
@media (max-width: 768px) {
  .our-services h2 { font-size: 1.8rem; }
  .service-card { padding: 1.2rem; }
}
</style>
